<form action="/user/update/<%= user.id%>" method="POST" class="form-signin">

    <div align="center">
        <h2 class="form-singin-heading">Hey, you're editing a user </h2>
    </div>

    <input type="text" value="<%= user.name %>" class="form-control" placeholder="Your Name" name="name">
    <input type="text" value="<%= user.title %>" class="form-control" placeholder="Your Title" name="title">
    <input type="text" value="<%= user.email %>" class="form-control" placeholder="Your Email Adress" name="email">

    <br />
    <input type="submit" class="btn btn-lg btn-primary btn-block" value="Update Account" />
    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>